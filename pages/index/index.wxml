<!--index.wxml-->
<view class="page">
  <!-- 头部个人信息内容 -->
  <view class="user-header">
      <view class="userinfo">
          <view>
            <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
            <view class="userinfo-nickname">
              <button wx:if="{{!hasUserInfo}}"  open-type="getUserInfo" bindgetuserinfo="getUserInfo" size="mini" style="line-height: 1.5; padding: 0 2px;">授权登录</button>
              <view wx:else>{{userInfo.nickName}}</view>
            </view>
          </view>
      </view>
      <view class="user-header-content">
        <view class="header-content-cell">
          <view><text class="header-content-cell-money">{{userInfo.totalCost}}</text>元</view>
          <view>未结算</view>
        </view>
        <view class="header-content-cell-center">
          <view wx:if="{{userInfo.leftCost <= 0}}">收<text class="header-content-cell-money" style="margin-left:4px; color:#1AAD19;">{{-userInfo.leftCost}}</text>元</view>
          <view wx:else>付<text class="header-content-cell-money" style="margin-left:4px; color:#576b95;">{{userInfo.leftCost}}</text>元</view>
          <view>结算应</view>
        </view>
      </view>
  </view>

  <!-- 用户消费组信息概括 -->
  <view wx:if="{{costGroups.length == 0}}" class="no-data">
    <view>暂无数据</view>
  </view>
  <view wx:else>
      <view class="user-cost">
        <!-- 头部 -->
        <view class="user-cost-title">
            <picker bindchange="selectCostGroup" value="{{selectCostGroup}}" range="{{costGroups}}" range-key="groupName" style="width:83%; float: left;">
              <text class="user-cost-title-text">{{selectCostGroup.groupName}} ~</text>
            </picker> 
            <button size="mini" style="background-color: #fff; height: 20px;line-height: 1;" id="{{groupDetail.costGroup.groupCode}}" open-type="share">
              <text class="iconfont icon-share-square-o:before" style="font-size: 20px;"></text>
            </button>
        </view>
        <!-- 中间内容体 -->
        <block wx:for="{{groupDetail.costUsers}}" wx:key="userId">
        <view class="user-cost-content">
          <view class="user-cost-content-cell">
           <navigator url="/pages/detail/detail?groupId={{groupDetail.costGroup.groupNo}}&userId={{item.userId}}">
              <view style="width: 85rpx;">
                <image class="user-cost-content-cell-img" src="{{item.avatarUrl}}"></image>
              </view>           
            </navigator>
            <view class="user-cost-content-cell-info">
              <view>{{item.remarkName}}</view>
              <view style="margin-top: 4px; font-size: 10px;" wx:if="{{item.admin == 'Y'}}">
                <text class="user-cost-content-cell-info-tag">管理员</text>
              </view>
            </view>
            <view class="user-cost-money" style="margin-left: 20rpx;">
              <view><text style="font-size: 18px;margin-right: 4px;color: #576b95;">{{item.totalCost}}</text>元</view>
              <view>累计消费</view>
            </view>
            <view class="user-cost-money" wx:if="{{item.leftCost <= 0}}">
              <view>收<text style="font-size: 18px;margin-right: 4px;margin-left: 4px;color: #1AAD19;">{{-item.leftCost}}</text>元</view>
              <view>结算应</view>
            </view>
            <view class="user-cost-money" wx:else>
              <view>付<text style="font-size: 18px;margin-right: 4px;margin-left: 4px;color: #e64340;">{{item.leftCost}}</text>元</view>
              <view>结算应</view>
            </view>
            <view style="width: 90rpx;">
              <navigator url="/pages/user/user?groupId={{groupDetail.costGroup.groupNo}}&userId={{item.userId}}&myRole={{groupDetail.myRole}}" style="padding-top: 10px; padding-bottom: 10px;">
                <text class="iconfont icon-setting:before"></text>
              </navigator>
            </view>
          </view>
          </view>
        </block>
      <!-- 尾部 -->
      <view class="user-cost-footer">
        <view class="user-cost-footer-cell">
          <navigator url="/pages/detail/detail?groupId={{groupDetail.costGroup.groupNo}}">
            <view class="iconfont icon-xiangqing:before weui-grid__icon" style="font-size: 18px;marign-bottom: 4px;"></view>
            <view>消费详情</view>
          </navigator>
        </view>
        <view class="user-cost-footer-cell-center">
          <navigator url="/pages/application/application?groupId={{groupDetail.costGroup.groupNo}}&myRole={{groupDetail.myRole}}">
              <text class="iconfont icon-moban:before weui-grid__icon" style="font-size: 20px;">
              <text style='font-size: 6px; color: #fff; border: 1px solid #e64340; border-radius: 50%;  background-color:#e64340;' wx:if="{{groupDetail.notApproveCount>0}}">{{groupDetail.notApproveCount}}</text>
              </text>
              <view>加入申请</view>
          </navigator>
        </view>
        <view class="user-cost-footer-cell">
          <navigator bindtap="openMore">
            <view class="iconfont icon-msnui-more:before weui-grid__icon" style="font-size: 20px;"></view>
            <view>更多</view>
          </navigator>
        </view>
      </view>
    </view>
</view>

<!-- 底部添加按钮 -->
<movable-area width="100%" height="50px">
    <movable-view class="user-footer user-footer-add" bindchange="moveAddButton">
       <button type="primary" class="iconfont icon-tianjia:before"  bindtap="openAdd">
       </button>
    </movable-view>
</movable-area>
