/**app.wxss**/
@import "icon/system/iconfont.wxss";
@import "icon/costCate/iconfont.wxss";
@import "lib/weui.wxss";

page{
    background-color: #F8F8F8;
    font-size: 15px;
    align-items:center;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.top-tip{
  -webkit-transform:translateZ(0);
  transform:translateZ(0);
  top:0;
  left:0;
  right:0;
  padding:5px;
  font-size:14px;
  text-align:center;
  color:#fff;
  z-index:5000;
  word-wrap:break-word;
  word-break:break-all;
  background-color:#e64340;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}